<!--#vista parciales-->
 <% name ||= "Crear" %>
 <h1><%= name %> articulo</h1>
  <%= form_for(@article) do |f| %>
   <% @article.errors.full_messages.each do |message| %>
       <div class="be-red white top-space">
           *<%= message %>
       </div>
   <%end%>
    <div class="field">
        <%= f.text_field :title, placeholder: "Titulo", class:"form-control" %>
    </div>
    <div class="field">
        Portada: <%= f.file_field :cover %>  
    </div>
    <div class="field">
        <%= f.text_area :body, placeholder: "Escribe aqui el articulo", class:"field1 form-control" %>
    </div>
    <div class="field">
        <label for="">Categorias</label>
        <% @categories.each do |category| %>
            <div class="field">
                <%= check_box_tag "categories[]", category.id %> - <%=  category.name %>
            </div>
        <%end%>
    </div>
    <div class="submit">
        <%= f.submit "Guardar", class:"btn be-red white" %>
    </div>
<%end%>